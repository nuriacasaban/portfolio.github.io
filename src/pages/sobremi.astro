---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import background from '../assets/background.svg';
---

<Layout>
  <!-- Header reutilizable -->
  <Header />
<img id="background" src={background.src} alt="Fondo" fetchpriority="high" />

  <!-- Iconos sociales fijos arriba a la derecha -->
  <div id="social-icons">
    <a href="https://www.linkedin.com/in/tu-perfil" target="_blank" rel="noopener">
      <img src="/src/assets/svg/linkedin.svg.svg" alt="LinkedIn" />
    </a>
    <a href="https://www.instagram.com/lalaulozanoo" target="_blank" rel="noopener">
      <img src="/src/assets/svg/instagram.svg.svg" alt="Instagram" />
    </a>
  </div>

  <main class="wrapper stack gap-8 lg:gap-12" style="margin-top: 100px;">
    <h1>En un futuro...</h1>
    <p>About me</p>
  </main>

  <style>

    #background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: blur(100px);
}
    /* Iconos sociales */
    #social-icons {
      position: fixed;
      top: 16px;
      right: 16px;
      display: flex;
      gap: 10px;
      z-index: 210; /* encima del header si se solapan */
    }
    #social-icons img {
      width: 28px;
      height: 28px;
      transition: transform 0.2s;
    }
    #social-icons a:hover img {
      transform: scale(1.2);
    }

    main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    p {
      text-align: center;
      margin-bottom: 2rem;
      color: #555;
    }
  </style>
</Layout>
