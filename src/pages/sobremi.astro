---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---
<Layout>

  <!-- Header reutilizable -->
  <Header />

  <!-- Iconos sociales fijos arriba a la derecha -->
  <div id="social-icons">
    <a href="https://www.instagram.com/lalaulozanoo" target="_blank" rel="noopener">
      <img src="/src/assets/svg/instagram.svg.svg" alt="Instagram" />
    </a>
    <a href="https://www.linkedin.com/in/tu-perfil" target="_blank" rel="noopener">
      <img src="/src/assets/svg/linkedin.svg.svg" alt="LinkedIn" />
    </a>
  </div>

  <main class="wrapper stack gap-8 lg:gap-12">
    <h1>EN PROCESO...</h1>
    <p>....</p>
  </main>

</Layout>

<style>
/* RESET */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* BODY */
body {
  opacity: 0;
  animation: fadeIn 0.6s ease forwards;
  background-color: white;
}
@keyframes fadeIn { to { opacity: 1; } }

/* SOCIAL ICONS */
#social-icons {
  position: fixed;
  top: 16px;
  right: 16px;
  display: flex;
  gap: 10px;
  z-index: 210;
}
#social-icons img {
  width: 28px;
  height: 28px;
  transition: transform 0.2s ease;
}
#social-icons img:hover {
  transform: scale(1.2);
  filter: brightness(0) saturate(100%) invert(44%) sepia(99%) saturate(4106%) hue-rotate(317deg) brightness(100%) contrast(97%);
  opacity: 1;
}

/* MAIN CONTENT */
main {
  max-width: 1200px;
  margin: 100px auto 2rem auto; /* margen superior para header */
  padding: 2rem;
  text-align: center;
}

h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

p {
  color: #555;
  margin-bottom: 2rem;
}

/* ===== RESPONSIVE ===== */
@media (max-width: 1024px) {
  h1 { font-size: 2.2rem; }
  p { font-size: 1rem; padding: 0 1rem; }
  #social-icons img { width: 26px; height: 26px; }
}

@media (max-width: 768px) {
  h1 { font-size: 2rem; }
  p { font-size: 0.95rem; padding: 0 1rem; }
  #social-icons { top: 12px; right: 12px; gap: 8px; }
  #social-icons img { width: 24px; height: 24px; }
}

@media (max-width: 480px) {
  h1 { font-size: 1.8rem; }
  p { font-size: 0.9rem; padding: 0 0.5rem; }
  #social-icons img { width: 22px; height: 22px; }
}
</style>
