---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---
<Layout>

  <!-- HEADER desde componente -->
  <Header />

  <!-- ICONOS SOCIALES -->
  <div id="social-icons">
    <a href="https://www.instagram.com/lalaulozanoo" target="_blank" rel="noopener">
      <img src="/src/assets/svg/instagram.svg.svg" alt="Instagram" />
    </a>
    <a href="https://www.linkedin.com/in/tu-perfil" target="_blank" rel="noopener">
      <img src="/src/assets/svg/linkedin.svg.svg" alt="LinkedIn" />
    </a>
  </div>

  <!-- FORMULARIO DE CONTACTO -->
  <main class="contact-page">
    <section class="contact-hero">
      <h1>LET'S START A CONVERSATION</h1>
      <p>Cuéntame tu proyecto y me pondré en contacto contigo pronto.</p>
    </section>

    <section class="contact-form-section">
      <form id="contact-form" action="https://formspree.io/f/xnjbnvgj" method="POST" novalidate>
        <label>
          <span class="label-text">Nombre <span class="required">*</span></span>
          <input type="text" name="name" placeholder="Nombre" required />
        </label>

        <label>
          <span class="label-text">Correo <span class="required">*</span></span>
          <input type="email" name="email" placeholder="Correo" required />
        </label>

        <label>
          <span class="label-text">Teléfono <span class="required">*</span></span>
          <input type="tel" name="phone" placeholder="Teléfono" required />
        </label>

        <label>
          <span class="label-text">Mensaje <span class="required">*</span></span>
          <textarea name="message" placeholder="Mensaje" required></textarea>
        </label>

        <button type="submit">Enviar</button>
        <p id="form-error" class="form-error">Por favor, completa todos los campos obligatorios.</p>
      </form>

      <div class="contact-info">
        <p>NEW YORK: +1 347-864-1240</p>
        <p>TORONTO: +1 416-219-9401</p>
        <p>Email: <a href="mailto:lauralozano992@gmail.com">lauralozano992@gmail.com</a></p>
      </div>
    </section>
  </main>

</Layout>

<style>
/* RESET */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* BODY */
body {
  opacity: 0;
  animation: fadeIn 0.6s ease forwards;
  background-color: white;
}
@keyframes fadeIn { to { opacity: 1; } }

/* HEADER */
#main-header {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 1.5rem 3rem;
  z-index: 20;
  transition: background 0.4s ease;
}
#main-header nav { display: flex; gap: 2rem; }

.nav-btn {
  color: rgb(129, 125, 125);
  text-decoration: none;
  font-size: 0.85rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  border-bottom: 2px solid rgb(129, 125, 125);
  padding-bottom: 2px;
}

/* SOCIAL ICONS */
#social-icons {
  position: fixed;
  top: 16px;
  right: 16px;
  display: flex;
  gap: 10px;
  z-index: 210;
}
#social-icons img {
  width: 28px;
  height: 28px;
  transition: transform 0.2s ease;
}
#social-icons img:hover {
  transform: scale(1.2);
  filter: brightness(0) saturate(100%) invert(44%) sepia(99%) saturate(4106%) hue-rotate(317deg) brightness(100%) contrast(97%);
  opacity: 1;
}

/* CONTACTO */
.contact-page {
  display: flex;
  flex-direction: column;
  gap: 4rem;
  padding: 4rem 2rem;
  max-width: 800px;
  margin: 0 auto;
}

.contact-hero h1 {
  font-size: clamp(2rem, 6vw, 4rem);
  font-weight: 700;
  letter-spacing: 0.2em;
  margin-bottom: 1rem;
  text-align: center;
}

.contact-hero p {
  font-size: 1rem;
  opacity: 0.8;
  text-align: center;
}

/* FORMULARIO */
.contact-form-section {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.contact-form-section form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.contact-form-section form label {
  display: flex;
  flex-direction: column;
  font-size: 0.9rem;
}

.label-text {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  margin-bottom: 0.3rem;
}

.required { color: red; }

.contact-form-section input,
.contact-form-section textarea {
  padding: 0.8rem 1rem;
  border-radius: 0.5rem;
  border: 1px solid #ccc;
  font-family: inherit;
  transition: border-color 0.3s, box-shadow 0.3s;
}

.contact-form-section input:focus,
.contact-form-section textarea:focus {
  outline: none;
  border-color: #b7a1b9;
  box-shadow: 0 0 0 2px rgba(183,161,185,0.15);
}

.contact-form-section button {
  align-self: flex-start;
  padding: 0.8rem 2rem;
  border-radius: 999px;
  border: none;
  background: #b7a1b9;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
}
.contact-form-section button:hover { background: #ec0b52; }

.form-error {
  display: none;
  color: red;
  font-size: 0.9rem;
  margin-top: 0.5rem;
}

.contact-info p {
  font-size: 0.9rem;
  margin: 0.3rem 0;
  text-align: center;
}

.contact-info a {
  color: #716073;
  text-decoration: none;
  transition: color 0.3s;
}
.contact-info a:hover { color: #ec0b52; }

/* ===== RESPONSIVE ===== */
@media (max-width: 1024px) {
  .contact-page { padding: 3rem 2rem; }
  #social-icons img { width: 26px; height: 26px; }
  .contact-form-section button { padding: 0.7rem 1.8rem; }
}

@media (max-width: 768px) {
  .contact-page { padding: 2.5rem 1.5rem; }
  #social-icons { top: 12px; right: 12px; gap: 8px; }
  #social-icons img { width: 24px; height: 24px; }
  .contact-form-section input,
  .contact-form-section textarea { padding: 0.7rem 0.8rem; }
  .contact-form-section button { padding: 0.7rem 1.5rem; }
}

@media (max-width: 480px) {
  .contact-page { padding: 2rem 1rem; gap: 2rem; }
  .contact-hero h1 { font-size: 1.8rem; }
  .contact-hero p { font-size: 0.9rem; }
  #social-icons img { width: 22px; height: 22px; }
  .contact-form-section input,
  .contact-form-section textarea { padding: 0.6rem 0.7rem; font-size: 0.85rem; }
  .contact-form-section button { padding: 0.6rem 1.2rem; font-size: 0.9rem; }
}
</style>

<script>
// Reseteamos el formulario al cargar la página
window.onload = () => {
  const form = document.getElementById("contact-form");
  form.reset();
  document.getElementById("form-error").style.display = "none";
}

// Validación del formulario
const form = document.getElementById("contact-form");
const errorMsg = document.getElementById("form-error");

form.addEventListener("submit", (e) => {
  let valid = true;
  form.querySelectorAll("[required]").forEach((input) => {
    if (!input.value.trim()) valid = false;
  });
  if (!valid) {
    e.preventDefault();
    errorMsg.style.display = "block";
    window.scrollTo({ top: form.offsetTop - 20, behavior: "smooth" });
  } else {
    errorMsg.style.display = "none";
  }
});
</script>
