---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import background from '../assets/background.svg';
---

<Layout>

  <!-- HEADER desde componente -->
  <Header />
<img id="background" src={background.src} alt="Fondo" fetchpriority="high" />
  <main class="contact-page">
    <!-- Hero / título -->
    <section class="contact-hero">
      <h1>LET'S START A CONVERSATION</h1>
      <p>Cuéntame tu proyecto y me pondré en contacto contigo pronto.</p>
    </section>
  <!-- Iconos sociales fijos arriba a la derecha -->
  <div id="social-icons">
    <a href="https://www.instagram.com/lalaulozanoo" target="_blank" rel="noopener">
      <img src="/src/assets/svg/instagram.svg.svg" alt="Instagram" />
    </a>
    <a href="https://www.linkedin.com/in/tu-perfil" target="_blank" rel="noopener">
      <img src="/src/assets/svg/linkedin.svg.svg" alt="LinkedIn" />
    </a>
  </div>
    <!-- Formulario -->
    <section class="contact-form-section">
      <form id="contact-form" action="https://formspree.io/f/xnjbnvgj" method="POST" novalidate>
        <label>
          <span class="label-text">Nombre <span class="required">*</span></span>
          <input type="text" name="name" placeholder="Nombre" required />
        </label>

        <label>
          <span class="label-text">Correo <span class="required">*</span></span>
          <input type="email" name="email" placeholder="Correo" required />
        </label>

        <label>
          <span class="label-text">Teléfono <span class="required">*</span></span>
          <input type="tel" name="phone" placeholder="Teléfono" required />
        </label>

        <label>
          <span class="label-text">Mensaje <span class="required">*</span></span>
          <textarea name="message" placeholder="Mensaje" required></textarea>
        </label>

        <button type="submit">Enviar</button>

        <!-- Mensaje de error -->
        <p id="form-error" class="form-error">Por favor, completa todos los campos obligatorios.</p>
      </form>

      <!-- Info adicional -->
      <div class="contact-info">
        <p>NEW YORK: +1 347-864-1240</p>
        <p>TORONTO: +1 416-219-9401</p>
        <p>
          Email: 
          <a href="mailto:lauralozano992@gmail.com">lauralozano992@gmail.com</a>
        </p>
      </div>
    </section>
  </main>
</Layout>

<style>
.contact-page {
  display: flex;
  flex-direction: column;
  gap: 4rem;
  padding: 4rem 2rem;
  max-width: 800px;
  margin: 0 auto;
}

.contact-hero h1 {
  font-size: clamp(2rem, 6vw, 4rem);
  font-weight: 700;
  letter-spacing: 0.2em;
  margin-bottom: 1rem;
}

.contact-hero p {
  font-size: 1rem;
  opacity: 0.8;
}

/* FORMULARIO */
.contact-form-section {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.contact-form-section form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.contact-form-section form label {
  display: flex;
  flex-direction: column;
  font-size: 0.9rem;
}

   #background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: blur(100px);
}
/* Etiqueta con asterisco al lado */
.label-text {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  margin-bottom: 0.3rem;
}

/* Asterisco rojo */
.required {
  color: red;
}

/* Inputs y textarea */
.contact-form-section input,
.contact-form-section textarea {
  padding: 0.8rem 1rem;
  border-radius: 0.5rem;
  border: 1px solid #ccc;
  font-family: inherit;
  transition: border-color 0.3s, box-shadow 0.3s;
}

.contact-form-section input:focus,
.contact-form-section textarea:focus {
  outline: none;
  border-color: #b7a1b9;
  box-shadow: 0 0 0 2px rgba(183,161,185,0.15);
}

.contact-form-section button {
  align-self: flex-start;
  padding: 0.8rem 2rem;
  border-radius: 999px;
  border: none;
  background: #b7a1b9;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
}

.contact-form-section button:hover {
  background: #ec0b52;
}

/* Mensaje de error */
.form-error {
  display: none; /* oculto por defecto */
  color: red;
  font-size: 0.9rem;
  margin-top: 0.5rem;
}

/* INFO ADICIONAL */
.contact-info p {
  font-size: 0.9rem;
  margin: 0.3rem 0;
}

.contact-info a {
  color: #716073;
  text-decoration: none;
  transition: color 0.3s;
}

.contact-info a:hover {
  color: #ec0b52;
}


    #social-icons {
      position: fixed;
      top: 16px;
      right: 16px;
      display: flex;
      gap: 10px;
      z-index: 210; /* encima del header si se solapan */
    }
    #social-icons img {
      width: 28px;
      height: 28px;
      transition: transform 0.2s;
    }
  #social-icons img:hover {
  transform: scale(1.2);
  filter: brightness(0) saturate(100%) invert(44%) sepia(99%) saturate(4106%) hue-rotate(317deg) brightness(100%) contrast(97%);
  opacity: 1;
}
</style>

<script>
// Reseteamos el formulario al cargar la página
window.onload = () => {
  const form = document.getElementById("contact-form");
  form.reset(); // limpia todos los campos
  document.getElementById("form-error").style.display = "none"; // oculta error
}

// Validación del formulario
const form = document.getElementById("contact-form");
const errorMsg = document.getElementById("form-error");

form.addEventListener("submit", (e) => {
  let valid = true;

  // Comprobamos cada campo requerido
  form.querySelectorAll("[required]").forEach((input) => {
    if (!input.value.trim()) {
      valid = false;
    }
  });

  // Solo mostramos el mensaje si falta algún campo
  if (!valid) {
    e.preventDefault();
    errorMsg.style.display = "block";
    window.scrollTo({ top: form.offsetTop - 20, behavior: "smooth" });
  } else {
    errorMsg.style.display = "none";
  }
});
</script>
