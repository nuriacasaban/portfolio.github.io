---
import Layout from '../layouts/Layout.astro';
import background from '../assets/background.svg';
---

<Layout>

  <!-- HEADER -->
  <header id="main-header">
    <nav>
      <a href="/" class="nav-btn">Inicio</a>
      <a href="/trabajos" class="nav-btn">Galería</a>
      <a href="/proyectos" class="nav-btn">Proyectos</a>
      <a href="/contact" class="nav-btn">Contacto</a> 
    </nav>
  </header>

  <!-- HERO -->
  <section class="hero">
    <img
      src="/images/hero.jpg"
      alt="Hero image"
      class="hero-image"
    />

    <div class="hero-text">
      <h1>LA LAURI</h1>
      <p>Photography · Art Direction</p>
    </div>
  </section>

  <!-- FONDO -->
  <img id="background" src={background.src} alt="" />

  <!-- ICONOS -->
  <div id="social-icons">
    <a href="https://www.instagram.com/lalaulozanoo" target="_blank">
      <img src="/src/assets/svg/instagram.svg.svg" alt="Instagram" />
    </a>
    <a href="https://www.linkedin.com" target="_blank">
      <img src="/src/assets/svg/linkedin.svg.svg" alt="LinkedIn" />
    </a>
  </div>

  <!-- CONTENIDO -->
  <main>
  <section class="intro">
    <p>
      Visual storyteller focused on photography,
      art direction and editorial aesthetics.
    </p>

    <!-- Enlace "Sobre mi" -->
    <a href="/sobremi" class="sobremi-link">Sobre mi</a>
  </section>
</main>

  <!-- FOOTER -->
  <footer class="site-footer">
    <h2 class="contact-trigger">Contacto</h2>
    <p>© 2026 La Lauri</p>
      <p>
    <a href="mailto:lauralozano992@gmail.com" class="footer-email">
      lauralozano992@gmail.com
    </a>
  </p>
  </footer>

</Layout>

<!-- CURSOR -->
<div class="custom-cursor"></div>

<!-- MODAL -->
<div id="contact-modal" class="modal">
  <div class="modal-content">
    <span id="close-modal">&times;</span>
    <h3>Hablemos ✨</h3>

    <form action="https://formspree.io/f/xnjbnvgj" method="POST">
      <input type="text" name="name" placeholder="Nombre" required />
      <input type="email" name="email" placeholder="Correo" required />
      <textarea name="message" placeholder="Mensaje" required></textarea>
      <button type="submit">Enviar</button>
    </form>
  </div>
</div>

<style>

/* RESET */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* FADE IN */
body {
  opacity: 0;
  animation: fadeIn 0.6s ease forwards;
}

@keyframes fadeIn {
  to { opacity: 1; }
}

/* HEADER */
#main-header {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 1.5rem 3rem;
  z-index: 10;
  transition: background 0.4s ease, color 0.4s ease;
}

#main-header nav {
  display: flex;
  gap: 2rem;
}

.sobremi-link {
  display: inline-block;
  margin-top: 1rem;
  font-weight: 600;
  font-size: 2rem;
  color: rgb(129, 125, 125);
  text-decoration: none;   /* Quitamos subrayado */
  transition: color 0.3s ease, transform 0.3s ease;
}

.sobremi-link:hover {
  color: #ec0b52;          /* Color rosa al pasar el cursor */
  transform: scale(1.05);  /* Pequeño zoom al pasar el cursor */
}

.nav-btn {
  color: rgb(129, 125, 125);
  text-decoration: none;       /* quitamos subrayado nativo */
  font-size: 0.85rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  border-bottom: 2px solid rgb(129, 125, 125); /* subrayado gris */
  padding-bottom: 2px;         /* espacio entre texto y línea */
  transition: color 0.4s ease, border-color 0.4s ease;
}

.nav-btn:hover {
  color:  rgb(129, 125, 125);             /* violeta al pasar el cursor */
  border-color: #ec0b52;      /* línea violeta también */
}

.nav-btn::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 0%;
  height: 2px;
  background: #b7a1b9;
  transition: all 0.4s ease;
  transform: translateX(-50%);
}




/* HEADER SCROLL */
#main-header.scrolled {
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(8px);
}

#main-header.scrolled .nav-btn {
  color: rgb(40,40,40);
}

/* HERO */
.hero {
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.hero-image {
  width: 50%;
  height: 100%;
  object-fit: cover;
  object-position: right center;
  margin-left: auto;
  display: block;
}

.hero-text {
  position: absolute;
  bottom: 10vh;
  left: 6vw;
  color: rgb(22, 22, 22);
}

.hero-text h1 {
  font-size: clamp(3rem, 8vw, 6rem);
  letter-spacing: 0.3em;
  font-weight: 600;
}

.hero-text p {
  margin-top: 1rem;
  font-size: 0.75rem;
  letter-spacing: 0.35em;
  text-transform: uppercase;
  opacity: 0.85;
}

.hero::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(0,0,0,0.1),
    rgba(0,0,0,0.35)
  );
}

/* INTRO */
.intro {
  max-width: 600px;
  margin: 8rem auto;
  padding: 0 2rem;
  font-size: 1.2rem;
  line-height: 1.6;
   text-align: center;
}

/* SOCIAL */
#social-icons {
  position: fixed;
  right: 2rem;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

#social-icons img {
   width: 30px;
  opacity: 0.7;
  transition: transform 0.3s ease, filter 0.3s ease, opacity 0.3s ease;
  filter: grayscale(0%) brightness(1); /* por defecto sin cambios */
}

#social-icons img:hover {
  transform: scale(1.2);
  filter: brightness(0) saturate(100%) invert(44%) sepia(99%) saturate(4106%) hue-rotate(317deg) brightness(100%) contrast(97%);
  opacity: 1;
}

/* FOOTER */
.site-footer {
  padding: 4rem 2rem;
  text-align: center;
}

.site-footer h2 {
  font-size: 0.9rem;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  cursor: pointer;
}

.footer-email {
  color: rgb(90, 87, 87); /* color base gris */
  text-decoration: none;
  transition: color 0.3s ease, font-size 0.3s ease;
}

.footer-email:hover {
  color: #ec0b52; /* color al pasar el cursor */
  font-size: 1.1rem;      
}


/* MODAL */
.modal {
  display: none;
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal.active {
  display: flex;
}

.modal-content {
  background: white;
  padding: 2rem;
  max-width: 400px;
  width: 90%;
}

/* CURSOR */
.custom-cursor {
  position: fixed;
  width: 18px;
  height: 18px;
  border: 1px solid rgba(255,255,255,0.6);
  border-radius: 50%;
  pointer-events: none;
  transform: translate(-50%, -50%);
  transition: transform 0.12s ease-out;
  z-index: 9999;
}

/* BACKGROUND */
#background {
  position: fixed;
  inset: 0;
  z-index: -1;
  filter: blur(120px);
}

/* RESPONSIVE */
@media (max-width: 768px) {
  .hero-text {
    left: 2rem;
  }

  .hero-text h1 {
    letter-spacing: 0.15em;
  }
}

</style>

<script>
/* CURSOR */
const cursor = document.querySelector('.custom-cursor');
window.addEventListener('mousemove', e => {
  cursor.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
});

/* HEADER SCROLL */
const header = document.getElementById("main-header");

window.addEventListener("scroll", () => {
  if (window.scrollY > window.innerHeight * 0.6) {
    header.classList.add("scrolled");
  } else {
    header.classList.remove("scrolled");
  }
});

/* FADE OUT LINKS */
document.querySelectorAll("a").forEach(link => {
  link.addEventListener("click", e => {
    if (link.target === "_blank") return;
    e.preventDefault();
    document.body.style.opacity = 0;
    setTimeout(() => {
      window.location = link.href;
    }, 300);
  });
});

/* MODAL */
const modal = document.getElementById("contact-modal");
document.querySelectorAll(".contact-trigger").forEach(el =>
  el.addEventListener("click", () => modal.classList.add("active"))
);
document.getElementById("close-modal")
  .addEventListener("click", () => modal.classList.remove("active"));
window.addEventListener("click", e => {
  if (e.target === modal) modal.classList.remove("active");
});
</script>
