<header id="main-header">
  <div class="menu-icon">
    <!-- Icono con líneas cruzadas -->
    <div class="menu-shape">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- Enlaces de navegación -->
    <nav class="nav-links">
      <a href="/" class="nav-btn">Inicio</a>
      <a href="/trabajos" class="nav-btn">Galería</a>
      <a href="/proyectos" class="nav-btn">Proyectos</a>
      <a href="/contact" class="nav-btn">Contacto</a>
    </nav>
  </div>
</header>

<style>
/* HEADER */
#main-header {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 1rem 2rem;
  display: flex;
  align-items: center;
  z-index: 20;
  background: white;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* ICONO DE MENÚ */
.menu-icon {
  position: relative;
  display: flex;
  align-items: center;
  gap: 1rem;
  cursor: pointer;
}

.menu-shape {
  position: relative;
  width: 40px;
  height: 40px;
  background: #bab9ba;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.3s ease, background 0.3s ease;
}

.menu-shape span {
  position: absolute;
  width: 2px;
  height: 20px;
  background: white;
  transition: all 0.3s ease;
}

.menu-shape span:nth-child(1) { transform: rotate(45deg); }
.menu-shape span:nth-child(2) { transform: rotate(-45deg); }
.menu-shape span:nth-child(3) { transform: rotate(0deg); opacity: 0.6; }

/* LINKS escritorio */
.nav-links {
  display: flex;
  gap: 2rem;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

/* Hover/focus en escritorio */
@media (min-width: 769px) {
  .menu-icon:hover .nav-links,
  .menu-icon:focus-within .nav-links {
    opacity: 1;
    pointer-events: auto;
  }

  .menu-icon:hover .menu-shape,
  .menu-icon:focus-within .menu-shape {
    transform: rotate(90deg) scale(1.3);
    background: #ec0b52;
  }

  .menu-icon:hover .menu-shape span,
  .menu-icon:focus-within .menu-shape span {
    opacity: 1;
    background: white;
  }
}

/* LINKS estilo normal */
.nav-links .nav-btn {
  text-decoration: none;
  color: rgb(129, 125, 125);
  font-size: 0.85rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  border-bottom: 2px solid rgb(129, 125, 125);
  padding-bottom: 2px;
  transition: transform 0.2s ease, color 0.2s ease;
}

.nav-links .nav-btn:hover {
  transform: scale(1.2);
  color: #ec0b52;
}

/* MÓVIL: FULL SCREEN MENU */
@media (max-width: 768px) {
  .nav-links {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: rgba(0,0,0,0.95);
    gap: 2rem;
    padding: 0;
    z-index: 999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .nav-links.show {
    opacity: 1;
    pointer-events: auto;
  }

  .nav-links .nav-btn {
    font-size: 2rem;
    color: white;
    border: none;
    text-align: center;
  }

  .nav-links .nav-btn:hover {
    color: #ec0b52;
    transform: scale(1.2);
  }

  .menu-shape {
    width: 35px;
    height: 35px;
  }

  .menu-shape span {
    height: 16px;
  }

  /* Icono activo al abrir menú móvil */
  .menu-icon.active .menu-shape {
    transform: rotate(90deg) scale(1.3);
    background: #ec0b52;
  }

  .menu-icon.active .menu-shape span {
    opacity: 1;
    background: white;
  }
}
</style>

<script>
(() => {
  const menuIcon = document.querySelector('.menu-icon');
  const navLinks = document.querySelector('.nav-links');

  const toggleMenu = () => {
    if (window.innerWidth <= 768) {
      navLinks.classList.toggle('show');
      menuIcon.classList.toggle('active');
    }
  };

  // Abrir/cerrar menú al tocar icono (móvil)
  menuIcon.addEventListener('click', toggleMenu);

  // Cerrar menú al tocar un enlace (móvil)
  navLinks.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth <= 768) {
        navLinks.classList.remove('show');
        menuIcon.classList.remove('active');
      }
    });
  });

  // Reset estado si pasamos a escritorio
  window.addEventListener('resize', () => {
    if (window.innerWidth > 768) {
      navLinks.classList.remove('show');
      menuIcon.classList.remove('active');
    }
  });
})();
</script>

</script>
