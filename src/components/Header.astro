<header id="main-header">
  <!-- Icono de menú a la izquierda -->
  <div class="menu-icon">
    <a href="/" class="menu-link">
      <!-- Icono original con líneas cruzadas -->
      <div class="menu-shape">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </a>

    <!-- Enlaces de navegación -->
    <nav class="nav-links">
      {!Astro.url.pathname === "/" && <a href="/" class="nav-btn">Inicio</a>}
      <a href="/trabajos" class="nav-btn">Galería</a>
      <a href="/proyectos" class="nav-btn">Proyectos</a>
      <a href="/contact" class="nav-btn">Contacto</a>
    </nav>
  </div>
</header>

<style>
/* HEADER */
#main-header {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 1rem 2rem;
  display: flex;
  align-items: center;
  z-index: 20;
  background: white;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* ICONO DE MENÚ */
.menu-icon {
  position: relative;
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* Icono con líneas diagonales */
.menu-shape {
  position: relative;
  width: 40px;
  height: 40px;
  background: #bab9ba;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: transform 0.3s ease, background 0.3s ease;
}

.menu-shape span {
  position: absolute;
  width: 2px;
  height: 20px;
  background: white;
  transition: all 0.3s ease;
}

.menu-shape span:nth-child(1) {
  transform: rotate(45deg);
}
.menu-shape span:nth-child(2) {
  transform: rotate(-45deg);
}
.menu-shape span:nth-child(3) {
  transform: rotate(0deg);
  opacity: 0.6;
}

/* Hover y focus: icono se hace más grande y gira */
.menu-icon:hover .menu-shape,
.menu-icon:focus-within .menu-shape {
  transform: rotate(90deg) scale(1.3);
  background: #ec0b52;
}

.menu-icon:hover .menu-shape span,
.menu-icon:focus-within .menu-shape span {
  opacity: 1;
  background: white;
}

/* NAV LINKS: inicialmente ocultos */
.nav-links {
  display: flex;
  gap: 2rem;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  align-items: center;
}

/* Mostrar enlaces mientras hover o focus */
.menu-icon:hover .nav-links,
.menu-icon:focus-within .nav-links {
  opacity: 1;
  pointer-events: auto;
}

/* ENLACES */
.nav-links .nav-btn {
  text-decoration: none;
  color: rgb(129, 125, 125);
  font-size: 0.85rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  border-bottom: 2px solid rgb(129, 125, 125);
  padding-bottom: 2px;
  transition: transform 0.2s ease, color 0.2s ease;
}

.nav-links .nav-btn:hover {
  transform: scale(1.2);
  color: #ec0b52;
}

/* RESPONSIVE: móviles */
@media (max-width: 768px) {
  #main-header {
    padding: 0.8rem 1rem;
  }

  .nav-links {
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    flex-direction: column;
    background: white;
    gap: 1rem;
    padding: 1rem 0;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  .nav-links .nav-btn {
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-bottom: none;
    text-align: center;
  }

  /* Mientras el menú no esté activo, no se ve */
  .menu-icon:not(:hover) .nav-links {
    opacity: 0;
    pointer-events: none;
  }

  /* Ajuste icono */
  .menu-shape {
    width: 35px;
    height: 35px;
  }

  .menu-shape span {
    height: 16px;
  }
}
</style>
